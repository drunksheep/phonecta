@import 'reset'
@import 'variables'

	
// ## Cores ## // 

// CTA 

// Fundo do "Balão"
$tooltipBackgroundColor = #FFF

// Sombra do Balão
$tooltipShadow = 0 0 10px 0 rgba(#000, .2)

// Título 
$ctaTitleColor = green 

// Texto chamada "Balão"
$ctaTextColor = #e1e1e1

// Botão de Confirmação 
$confirmButtonBackground = green
$confirmButtonColor = #FFF
$confirmButtonHoverBackground = darken(green, 10)
$confirmButtonHoverColor = #FFF
$confirmButtonBorderColor = green
$confirmButtonHoverBorderColor = darken(green, 10)

// Botão de "esconder" o CTA
$hideCtaBackground = #FFF
$hideCtaColor = green
$hideCtaBorderColor = lighten(green, 20)

// Fundo do botao / ícone de telefone
$phoneIconBackground = green
$phoneIconBackgroundWave = rgba(green .3)
$phoneIconColor = #FFF

// Overlay e Corpo do Form

// Overlay
$overlayBackground = rgba(#e1e1e1, .9)

// Botão de Fechar o Overlay
$closeButtonColor = #FFF

// Corpo do Formulário
$formWrapperBackground = #FFF
$formWrapperBackgroundShadow = 0 0 10px 0 rgba(#000, .2)

// Ícones / Botões 
$icons = green
$iconsActive = darken(green, 10)
$switchButtonsBackground = #58595b
$switchButtonsBackgroundActive = darken(#58595b, 10)
$switchButtonsColor = #FFF
$switchButtonsColorActive = #FFF

// Campos 
$fieldBorderColor = #000
$fieldBackgroundColor = #FFF

// Botão de Envio
$submitButtonBorderColor = #000
$submitButtonBorderColorHover = #000
$submitButtonBackgroundColor = green 
$submitButtonBackgroundColorHover = green 
$submitButtonColor = #FFF
$submitButtonColorHover = #FFF

// "Bolinha" de número de "ligadores"
$callerNumberBackground = red

// Texto das chamadas dentro do form 
$innerFormTextColor = #58595b

// ## Tamanhos, border-radius, Margens ## // 

// Tamanho máximo da Caixa dos Forms 
$formWrapperMaxWidth = 500px

// Tamanho do Título do "Balão"
$ctaTitleSize = 20px

// Tamanho da chamadinha do "Balão"
$ctaTextSize = 12px

// Bordas no botão de esconder o CTA 
$hideCtaBorderWidth = 1px

// Tamanho das Fontes internas das chamadas 
$innerFormTextSize = 16px

// Altura dos Campos, Largura das Bordas
$fieldHeight = 42px
$fieldBorderWidth = 2px

// Altura do Botão de Enviar, Largura da borda
$confirmButtonHeight = 30px
$confirmButtonBorderWidth = 2px

// Border radius (será aplicado nos campos, no wrapper e no botão de enviar)
$borderRadius = 0


/** 
#############################################################
#############################################################
### EM 99% DOS CASOS, VOCÊ NÃO PRECISA EDITAR NADA ABAIXO ###	 
#############################################################
#############################################################
**/

// Wrapper geral do CTA
.cta-open-wrapper 
	position fixed
	bottom 30px 
	right 15px
	z-index 10
	text-align center
	
	// @media $tablet-max
	// 	display noness
	
	@media $small-desktop-minmax
		bottom 15px
	
// Balão
.cta-tooltip
	width 130px
	padding 22px 14px 19px 14px
	position relative
	background-color $tooltipBackgroundColor
	box-shadow $tooltipShadow
	margin-bottom 25px

	&:after
		content ''
		display block
		top 100% 
		left 50%
		border solid transparent
		height 0 
		width 0
		position absolute
		border-color transparent 
		border-top-color $tooltipBackgroundColor
		border-width 10px
		margin-left -10px

// Textos do Balão
.cta-main-title
	color $ctaTitleColor
	font-size $ctaTitleSize
	margin-bottom 10px

.cta-main-text
	color $ctaTextColor
	font-size $ctaTextSize
	margin-bottom 15px

// Botão do Balão
.cta-open
	color $ctaButtonColor
	background-color $ctaButtonBackground

	&:hover
		background-color $ctaButtonHoverBackground
		color $ctaButtonHoverColor

// Ícone de Telefone

.phone-icon
	background-color $phoneIconBackground
	box-shadow 0 0 0 7px $phoneIconBackgroundWave
	font-size 20px
	width 45px 
	height 45px
	border-radius 50%
	margin-left auto 
	margin-right auto 
	border 0
	position relative

	i, img
		color $phoneIconColor
		position absolute
		left 0 
		right 0 
		margin auto 
		top 50%
		transform translateY(-50%)
	
	&:after
		content attr(data-notifications)
		padding 3px 6px 
		font-size 12px 
		color #FFF
		background-color red
		border-radius 50%
		position absolute
		top -6px 
		right -6px
	
// Botão de esconder "Balão"
.cta-hide-tooltip
	position absolute
	top -8px 
	right -8px 
	border-radius 50%
	font-size 16px
	border $hideCtaBorderWidth solid $hideCtaBorderColor
	background-color $hideCtaBackground
	color $hideCtaColor

// Botão de Confirmação (abrir o CTA)
.cta-open
	width 100%
	height $confirmButtonHeight
	border $confirmButtonBorderWidth solid $confirmButtonBorderColor
	color $confirmButtonColor
	background-color $confirmButtonBackground
	transition all .3s ease-in-out

	&:hover
		background-color $confirmButtonHoverBackground
		color $confirmButtonHoverColor
		border-color $confirmButtonHoverBorderColor

// Overlay 
.cta-overlay
	background-color $overlayBackground
	position fixed 
	top 0 
	left 0 
	width 100% 
	height 100%
	z-index 11

.form-wrapper-all
	position absolute
	left 0 
	right 0 
	margin auto 
	top 50%
	transform translateY(-50%)
	width 100%
	max-width $formWrapperMaxWidth
	background-color $formWrapperBackground
	box-shaddow $formWrapperBackgroundShadow